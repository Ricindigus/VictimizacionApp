<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cap700_pregunta4_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pregunta_margin"
    android:padding="@dimen/layout_margin"
    android:background="@drawable/borde_layout_preguntas">
    <TextView
        android:id="@+id/cap700_pregunta4_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/textoMedium"
        android:layout_marginBottom="@dimen/pregunta_margin"
        android:text="@string/capitulo700_pregunta4"/>
    <RadioGroup
        android:id="@+id/cap700_pregunta4_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_margin="@dimen/subpregunta_margin"
            android:id="@+id/cap700_pregunta4_radiobutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textoSmall"
            android:text="@string/capitulo700_pregunta4_sp1"
            />
        <RadioButton
            android:layout_margin="@dimen/subpregunta_margin"
            android:id="@+id/cap700_pregunta4_radiobutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textoSmall"
            android:text="@string/capitulo700_pregunta4_sp2"
            />
        <RadioButton
            android:layout_margin="@dimen/subpregunta_margin"
            android:id="@+id/cap700_pregunta4_radiobutton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textoSmall"
            android:text="@string/capitulo700_pregunta4_sp3"
            />
        <LinearLayout
            android:id="@+id/cap700_pregunta4_radiobutton3_layout_adicional"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin"
            android:layout_margin="@dimen/layout_margin"
            android:visibility="gone"
            android:background="@drawable/borde_pregunta8a">
            <TextView
                android:id="@+id/cap700_pregunta4_radiobutton3_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_margin"
                android:text="@string/texto_especifique"/>
            <EditText
                android:id="@+id/cap700_pregunta4_radiobutton3_edit"
                android:inputType="text"
                android:background="@drawable/cajas_de_texto"
                android:layout_width="300dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <RadioButton
            android:layout_margin="@dimen/subpregunta_margin"
            android:id="@+id/cap700_pregunta4_radiobutton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textoSmall"
            android:text="@string/capitulo700_pregunta4_sp4"
            />
        <RadioButton
            android:layout_margin="@dimen/subpregunta_margin"
            android:id="@+id/cap700_pregunta4_radiobutton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textoSmall"
            android:text="@string/capitulo700_pregunta4_sp5"
            />
        <RadioButton
            android:layout_margin="@dimen/subpregunta_margin"
            android:id="@+id/cap700_pregunta4_radiobutton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textoSmall"
            android:text="@string/capitulo700_pregunta4_sp6"
            />
        <LinearLayout
            android:id="@+id/cap700_pregunta4_radiobutton6_layout_adicional"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin"
            android:layout_margin="@dimen/layout_margin"
            android:visibility="gone"
            android:background="@drawable/borde_pregunta8a">
            <TextView
                android:id="@+id/cap700_pregunta4_radiobutton6_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_margin"
                android:text="@string/texto_especifique"/>
            <EditText
                android:id="@+id/cap700_pregunta4_radiobutton6_edit"
                android:inputType="text"
                android:background="@drawable/cajas_de_texto"
                android:layout_width="300dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <RadioButton
            android:layout_margin="@dimen/subpregunta_margin"
            android:id="@+id/cap700_pregunta4_radiobutton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textoSmall"
            android:text="@string/capitulo700_pregunta4_sp7"
            />
    </RadioGroup>
</LinearLayout>