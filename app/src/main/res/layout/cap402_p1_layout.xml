<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cap402_pregunta1_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pregunta_margin"
    android:padding="@dimen/layout_margin"
    android:background="@drawable/borde_layout_preguntas">
    <TextView
        android:id="@+id/c402_pregunta1_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/textoMedium"
        android:text="@string/capitulo402_pregunta1"/>
    <CheckBox
        android:id="@+id/c402_pregunta1_checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textoSmall"
        android:text="@string/capitulo402_pregunta1_sp1"
        />
    <CheckBox
        android:id="@+id/c402_pregunta1_checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textoSmall"
        android:text="@string/capitulo402_pregunta1_sp2"
        />
    <CheckBox
        android:id="@+id/c402_pregunta1_checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textoSmall"
        android:text="@string/capitulo402_pregunta1_sp3"
        />
</LinearLayout>

