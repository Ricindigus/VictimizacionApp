<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.gob.inei.victimizacionapp.MarcoActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="@dimen/layout_margin">
        <TextView
            android:textColor="@color/indigoPrimaryDark"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PANTALLA DE MARCO"
            android:textSize="@dimen/textoLarge"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <Button
            android:text="Ir a Encuesta"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="irAEncuesta"/>
    </LinearLayout>
</LinearLayout>
