<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/pregunta_margin"
    android:layout_marginRight="@dimen/pregunta_margin"
    android:id="@+id/cab300_layout">
    <TextView
        android:id="@+id/cabecera300_nombre_capitulo"
        android:layout_marginBottom="@dimen/layout_margin"
        android:padding="10dp"
        android:textColor="@color/icons"
        android:textStyle="bold"
        android:textSize="@dimen/textoMedium"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/capitulo300_titulo"
        />
</LinearLayout>